<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAcademy2020" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="background">@color/dark_grey</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <!--    Common  -->

    <style name="TextView" parent="Theme.AndroidAcademy2020">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextView.TextBold" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">900</item>
    </style>

    <style name="TextView.PG" parent="TextView.TextBold">
        <item name="android:layout_width">@dimen/pg_width</item>
        <item name="android:layout_height">@dimen/pg_height</item>
        <item name="android:alpha">0.9</item>
        <item name="android:background">@drawable/pg_shape</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Title" parent="TextView.TextBold">
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/gallery</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="TextView.Subtitle" parent="TextView.TextBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gallery</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="TextView.CastNames" parent="TextView.TextBold">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/alto</item>
    </style>

    <style name="TextView.Plain">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">300</item>
    </style>

    <style name="TextView.LongText" parent="TextView.Plain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.75</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextView.Tags" parent="TextView.Plain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>


    <style name="TextView.BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16sp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:drawablePadding">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/back</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="drawableStartCompat">@drawable/ic_back</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="ImageView.Like" parent="">
        <item name="android:layout_width">@dimen/like_width</item>
        <item name="android:layout_height">@dimen/like_height</item>
        <item name="android:src">@drawable/like_states</item>
    </style>

    <style name="RatingBarSvg" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:progressDrawable">@drawable/ratingbar_svg_selector</item>
        <item name="android:progressTint">@color/pink</item>
        <item name="android:secondaryProgressTint">@color/grey</item>
    </style>

    <!--    MovieDetails   -->

    <style name="TextView.MovieDetails.Review" parent="TextView.TextBold">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageView.MovieDetails.CastAvatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--    Movie Item   -->

    <style name="CardView.MovieItemPoster" parent="">
        <item name="android:elevation">24dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="ImageView.MovieItemPoster" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="TextView.MovieItem.Title" parent="TextView.Subtitle" />

    <style name="TextView.MovieItem.Tags" parent="TextView.Tags">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="TextView.MovieItem.Review" parent="TextView.TextBold">
        <item name="android:textSize">8sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.MovieItem.Timing" parent="TextView.TextBold">
        <item name="android:textSize">8sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/scarpa_flow</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>